import { NavigationExperimental } from 'react-native';

const { Reducer: NavigationReducer } = NavigationExperimental;

const _{{reducerName}} = NavigationReducer.StackReducer({
  getPushedReducerForAction: (action) => {
    if (action.type === 'push') {
      return (state) => (state || action.route);
    }
    return null;
  },
  initialState: {
    key: '{{reducerName}}',
    index: 0,
    children: [
      {
        key: '{{reducerName}}-initial-card',
        index: 0
      },
    ],
  },
});

const {{reducerName}} = (state, action) => {
  if (action.scope && action.scope !== '{{reducerName}}') {
    return state;
  } else {
    return _{{reducerName}}(state, action);
  }
};

export default {{reducerName}};